<div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow">
  <% if notice %>
    <div class="mb-4 bg-green-100 border-l-4 border-green-500 text-green-700 p-4 rounded">
      <p><%= notice %></p>
    </div>
  <% end %>

  <% if alert %>
    <div class="mb-4 bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded">
      <p><%= alert %></p>
    </div>
  <% end %>

  <h2 class="text-2xl font-bold text-gray-800 mb-6">⚙️ アカウント設定の編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="mb-4">
      <%= f.label :name, "表示名（ニックネーム）", class: "block text-sm font-semibold text-gray-700" %>
      <%= f.text_field :name, autofocus: true, class: "mt-1 block w-full rounded-md bg-gray-50 border-gray-300 shadow-sm" %>
      <% if resource.errors[:name].any? %>
        <p class="text-sm text-red-600 mt-1"><%= resource.errors[:name].first %></p>
      <% end %>
    </div>

    <div class="mb-6">
      <%= f.label :email, "メールアドレス", class: "block text-sm font-semibold text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full rounded-md bg-gray-50 border-gray-300 shadow-sm" %>
      <% if resource.errors[:email].any? %>
        <p class="text-sm text-red-600 mt-1"><%= resource.errors[:email].first %></p>
      <% end %>
    </div>

    <hr class="my-6 border-gray-300">

    <h3 class="text-xl font-semibold mb-4">🔐 パスワード変更（任意）</h3>

    <div class="mb-4">
      <%= f.label :password, "新しいパスワード", class: "block text-sm font-semibold text-gray-700" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md bg-gray-50 border-gray-300 shadow-sm" %>
      <% if resource.errors[:password].any? %>
        <p class="text-sm text-red-600 mt-1"><%= resource.errors[:password].first %></p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "パスワード再入力", class: "block text-sm font-semibold text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md bg-gray-50 border-gray-300 shadow-sm" %>
    </div>

    <div class="mb-6">
      <%= f.label :current_password, "現在のパスワード（確認用）", class: "block text-sm font-semibold text-gray-700" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full rounded-md bg-gray-50 border-gray-300 shadow-sm" %>
      <% if resource.errors[:current_password].any? %>
        <p class="text-sm text-red-600 mt-1"><%= resource.errors[:current_password].first %></p>
      <% end %>
    </div>

    <p class="text-sm text-gray-600 mb-6">※ 表示名・メールアドレスを更新する場合もパスワードの入力が必要です</p>

    <div class="flex items-center space-x-4">
      <%= f.submit "✅ 更新する", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded shadow" %>
      <%= link_to "🏠 マイページへ戻る", profile_path(current_user), class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded shadow" %>
    </div>
  <% end %>

  <hr class="my-8 border-gray-300">

  <div class="mt-6">
    <h4 class="text-red-600 font-bold mb-2">💥 アカウントを削除する</h4>
    <p class="text-sm text-gray-700 mb-4">この操作は取り消せません。本当に削除しますか？</p>

    <%= button_to "⚠️ アカウントを削除", registration_path(resource_name), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded shadow" %>
  </div>
</div>
