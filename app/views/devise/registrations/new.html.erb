<h1 class="text-3xl font-bold text-center text-gray-800 mb-8">
  今、あなたの物語がはじまる
</h1>

<div class="max-w-md mx-auto bg-white p-8 rounded-2xl shadow-xl border border-gray-200">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <!-- ユーザー名 -->
    <div class="mb-6">
      <label class="block text-gray-700 font-semibold mb-1">ユーザー名</label>
      <%= f.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>

    <!-- メールアドレス -->
    <div class="mb-6">
      <label class="block text-gray-700 font-semibold mb-1">メールアドレス</label>
      <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>

    <!-- パスワード -->
    <div class="mb-6">
      <label class="block text-gray-700 font-semibold mb-1">パスワード</label>
      <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>

    <!-- パスワード確認 -->
    <div class="mb-6">
      <label class="block text-gray-700 font-semibold mb-1">パスワード（確認）</label>
      <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>

    <!-- 登録ボタン -->
    <div class="mb-4">
      <%= f.submit "新規登録", class: "w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 rounded-lg transition duration-200" %>
    </div>

    <!-- リンク -->
    <div class="text-center text-sm">
      <%= link_to "すでにアカウントをお持ちの方はこちら", new_session_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>

  <% end %>
</div>
