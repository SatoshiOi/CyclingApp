<h1 class="text-3xl font-bold text-center text-gray-800 mb-8">
  走ってきた道、これから走る道、すべてここに
</h1>

<div class="max-w-md mx-auto bg-white p-8 rounded-2xl shadow-xl border border-gray-200">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <!-- メールアドレス -->
    <div class="mb-6">
      <label class="block text-gray-700 font-semibold mb-1">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>

    <!-- パスワード -->
    <div class="mb-6">
      <label class="block text-gray-700 font-semibold mb-1">パスワード</label>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>

    <!-- チェックボックス -->
    <div class="flex items-center mb-6">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <label class="text-sm text-gray-600">ログイン情報を記憶する</label>
    </div>

    <!-- ログインボタン -->
    <div class="mb-4">
      <%= f.submit "ログイン", class: "w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 rounded-lg transition duration-200" %>
    </div>

    <!-- リンク -->
    <div class="flex justify-between text-sm">
      <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "text-blue-500 hover:underline" %>
      <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>

  <% end %>
</div>
