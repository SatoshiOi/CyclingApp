<h1>あなたの自慢の1台を登録しよう！</h1>

<%= form_with model: @bike, url: bike_path, local: true do |form| %>
  <% if @bike.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@bike.errors.count, "エラー") %>が発生しました:</h2>
      <ul>
        <% @bike.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :image, "自転車の写真" %><br>
    <%= form.file_field :image %>
  </div>

  <div class="form-group">
    <%= form.label :description, "あなたのこだわりポイントを熱く語ってください！" %><br>
    <%= form.text_area :description, rows: 6 %>
  </div>

  <div class="form-actions">
    <%= form.submit "登録する！" %>
  </div>
<% end %>
